{
    "servicerestart":"service caddy restart",
    "serviceget": "/usr/local/bin/nextcloudget",
    "serviceset": "/usr/local/bin/nextcloudset",
    "options":
	{
		"hostname": {
			"type": "string",
			"name": "Nextcloud FQDN",
			"description": "Hostname (FQDN) for Nextcloud",
			"requirerestart": true
		},
		"timezone": {
			"type": "string",
			"name": "Timezone",
			"description": "Timezone used for Nextcloud",
			"requirerestart": true
		},
		"caddy_cert_email": {
			"type": "string",
			"name": "Certificate email address",
			"description": "Email address used for certificate challenge",
			"requirerestart": true
		},
		"caddy_env": {
			"type": "string",
			"name": "Certificate DNS challenge config",
			"description": "Settings for certificate DNS challenge",
			"requirerestart": true
		}
	}
}
